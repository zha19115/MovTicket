@{
}

@model MovTicket.Models.Entities.Customer

<h1>Edit Customer</h1>

@if (Model is null)
{
    <p>No Customer was found with this ID.</p>    
}
else
{
    <form method="post" asp-action="Edit">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="c_id"readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="c_name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Adress</label>
            <input type="text" class="form-control" asp-for="c_adress" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="c_email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="c_phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscription" asp-for="c_subscription" />
            <label class="form-check-label" for="Subscription">Subscription</label>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Customer">
                Delete
            </button>
        </div>
        
    </form>
}